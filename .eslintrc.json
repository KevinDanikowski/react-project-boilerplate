{
  "env": {
    "browser": true,
    "es6": true,
    "jest": true
  },
  "extends": ["airbnb", "prettier"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "react/prop-types": ["error"],
    "react/jsx-props-no-spreading": ["warn"],
    "react/forbid-prop-types": ["warn"],
    "no-unused-vars": ["warn"],
    "import/no-unresolved": ["warn"]
  }
}
